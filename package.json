{
  "name": "hasura-backend-plus",
  "license": "MIT",
  "repository": {
    "url": "git://github.com/nhost/hasura-backend-plus.git",
    "type": "git"
  },
  "version": "2.0.0",
  "main": "src/start.ts",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --no-notify src/start.ts",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "start": "ts-node -r tsconfig-paths/register src/start.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@hapi/boom": "9.1.0",
    "@hapi/joi": "17.1.1",
    "@types/body-parser": "1.19.0",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.6",
    "@types/ejs": "3.0.1",
    "@types/email-templates": "6.0.2",
    "@types/express": "4.17.3",
    "@types/express-fileupload": "1.1.2",
    "@types/express-rate-limit": "5.0.0",
    "@types/hapi__joi": "16.0.12",
    "@types/helmet": "0.0.45",
    "@types/lodash.kebabcase": "^4.1.6",
    "@types/node": "13.9.3",
    "@types/nodemailer": "6.4.0",
    "@types/qrcode": "1.3.4",
    "@types/uuid": "7.0.2",
    "argon2": "0.26.1",
    "aws-sdk": "2.647.0",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.5",
    "cors": "2.8.5",
    "cross-env": "7.0.2",
    "dotenv": "8.2.0",
    "ejs": "3.0.1",
    "email-templates": "7.0.4",
    "express": "4.17.1",
    "express-fileupload": "1.1.6",
    "express-rate-limit": "5.1.1",
    "graphql": "14.6.0",
    "graphql-request": "1.8.2",
    "graphql-tag": "2.10.3",
    "helmet": "3.22.0",
    "hibp": "9.0.0",
    "jose": "1.25.0",
    "lodash.kebabcase": "^4.1.1",
    "nodemailer": "6.4.6",
    "otplib": "12.0.1",
    "qrcode": "1.4.4",
    "ts-node": "8.8.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3",
    "uuid": "7.0.2"
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/node-fetch": "2.5.5",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "@vuepress/plugin-back-to-top": "1.4.0",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "jest": "25.2.2",
    "jest-extended": "0.11.5",
    "lint-staged": "10.0.9",
    "markdown-it-multimd-table": "4.0.1",
    "node-fetch": "2.6.0",
    "prettier": "2.0.2",
    "pretty-quick": "2.0.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-node-dev": "1.0.0-pre.44",
    "vuepress": "1.4.0"
  },
  "eslintConfig": {
    "root": true,
    "rules": {
      "curly": [
        1,
        "all"
      ],
      "@typescript-eslint/camelcase": "off"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:jest/recommended"
    ]
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/src/shared/$1",
      "^@custom/(.*)$": "<rootDir>/custom/$1"
    },
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "lint-staged": {
    "*.js,*.ts,*.md,*.json": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
