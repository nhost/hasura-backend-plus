{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "es2020"
    ],
    "paths": {
      "*": [
        "src/types/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@test/*": [
        "src/test/*"
      ]
    },
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es2019",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": false,
    "inlineSourceMap": true,
  }
}