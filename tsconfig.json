{
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src"],
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es2019",
    "baseUrl": "src",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true
  }
}
